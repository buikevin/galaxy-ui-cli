{
  "name": "@galaxy-ui/react",
  "version": "0.0.1",
  "description": "Galaxy UI components for React with Radix UI + Tailwind CSS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@galaxy-ui/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "@galaxy-ui/source": "./src/components/*.tsx",
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "default": "./dist/components/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "radix-ui",
    "tailwind",
    "tailwindcss",
    "accessible",
    "galaxy-ui"
  ],
  "author": {
    "name": "Bùi Trọng Hiếu (kevinbui)",
    "email": "kevinbui210191@gmail.com",
    "url": "https://github.com/buikevin"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buikevin/galaxy-ui-cli",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/buikevin/galaxy-ui-cli/issues"
  },
  "homepage": "https://github.com/buikevin/galaxy-ui-cli#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.0",
    "lucide-react": "^0.460.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.3.0"
  }
}
